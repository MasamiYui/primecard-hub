/* pages/news-detail/news-detail.wxss */
.container {
  padding: 0;
  background-color: #fff;
  min-height: 100vh;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
  height: 300px;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 4px solid #f3f3f3;
  border-top: 4px solid #1a73e8;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 15px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 14px;
  color: #999;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
  height: 300px;
}

.error-image {
  width: 120px;
  height: 120px;
  margin-bottom: 15px;
}

.error-text {
  font-size: 14px;
  color: #999;
  margin-bottom: 20px;
}

.retry-button {
  background-color: #1a73e8;
  color: #fff;
  font-size: 14px;
  padding: 8px 20px;
  border-radius: 4px;
}

/* 资讯头部 */
.news-header {
  padding: 15px;
}

.news-title {
  font-size: 22px;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 15px;
}

.news-meta {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-bottom: 15px;
  font-size: 12px;
  color: #999;
}

.news-author {
  margin-right: 10px;
}

.news-date {
  margin-right: 10px;
}

.news-category {
  background-color: #f0f4ff;
  color: #1a73e8;
  padding: 2px 6px;
  border-radius: 4px;
}

.news-cover {
  width: 100%;
  border-radius: 8px;
  margin-bottom: 15px;
}

/* 资讯内容 */
.news-content {
  padding: 0 15px 20px;
  font-size: 16px;
  line-height: 1.8;
  color: #333;
}

/* 富文本样式 */
.news-content rich-text {
  width: 100%;
}

/* 标题样式 */
.news-content rich-text h1 {
  font-size: 20px;
  font-weight: 600;
  margin: 20px 0 15px;
  color: #333;
}

.news-content rich-text h2 {
  font-size: 18px;
  font-weight: 600;
  margin: 18px 0 12px;
  color: #333;
}

.news-content rich-text h3 {
  font-size: 16px;
  font-weight: 600;
  margin: 15px 0 10px;
  color: #333;
}

/* 段落样式 */
.news-content rich-text p {
  margin-bottom: 15px;
  line-height: 1.8;
}

/* 列表样式 */
.news-content rich-text ul,
.news-content rich-text ol {
  margin: 15px 0;
  padding-left: 20px;
}

.news-content rich-text li {
  margin-bottom: 8px;
}

/* 图片样式 */
.news-content rich-text image {
  max-width: 100%;
  margin: 15px 0;
  border-radius: 8px;
}

/* 资讯底部 */
.news-footer {
  padding: 15px;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.news-stats {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.news-views {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #999;
}

.news-actions {
  display: flex;
  justify-content: space-around;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 12px;
  color: #666;
}

.action-item.active {
  color: #1a73e8;
}

.icon {
  width: 24px;
  height: 24px;
  margin-bottom: 5px;
}

/* 相关推荐 */
.related-news {
  padding: 15px;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 15px;
  position: relative;
  padding-left: 10px;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 4px;
  bottom: 4px;
  width: 3px;
  background-color: #1a73e8;
  border-radius: 3px;
}

.related-list {
  display: flex;
  flex-direction: column;
}

.related-item {
  display: flex;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}

.related-title {
  flex: 1;
  font-size: 14px;
  color: #333;
  line-height: 1.4;
}

.related-image {
  width: 80px;
  height: 60px;
  border-radius: 4px;
  margin-left: 10px;
}