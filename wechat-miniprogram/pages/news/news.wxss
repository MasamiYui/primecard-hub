/* pages/news/news.wxss */
.container {
  padding: 0;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 分类选择 */
.category-scroll {
  width: 100%;
  white-space: nowrap;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.category-list {
  display: flex;
  padding: 0 10px;
}

.category-item {
  display: inline-block;
  padding: 15px 20px;
  font-size: 14px;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.category-item.active {
  color: #1a73e8;
  font-weight: 500;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20px;
  right: 20px;
  height: 3px;
  background-color: #1a73e8;
  border-radius: 3px 3px 0 0;
}

/* 资讯列表 */
.news-list {
  padding: 10px 15px;
}

.news-item {
  display: flex;
  padding: 15px;
  background-color: #fff;
  border-radius: 8px;
  margin-bottom: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.news-content {
  flex: 1;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
}

.news-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 8px;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.news-summary {
  font-size: 14px;
  color: #666;
  margin-bottom: 10px;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.news-image {
  width: 100px;
  height: 100px;
  border-radius: 6px;
  flex-shrink: 0;
  background-color: #f0f0f0;
}

.news-meta {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  font-size: 12px;
  color: #999;
  margin-top: auto;
}

.news-category {
  background-color: #f0f4ff;
  color: #1a73e8;
  padding: 2px 6px;
  border-radius: 4px;
  margin-right: 8px;
}

.news-date {
  margin-right: 8px;
}

.news-stats {
  display: flex;
  margin-left: auto;
}

.news-views, .news-likes {
  margin-left: 8px;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
}

.empty-image {
  width: 120px;
  height: 120px;
  margin-bottom: 15px;
}

.empty-text {
  font-size: 14px;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px 0;
}

.loading-spinner {
  width: 30px;
  height: 30px;
  border: 3px solid #f3f3f3;
  border-top: 3px solid #1a73e8;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 10px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 14px;
  color: #999;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  padding: 15px 0;
  font-size: 14px;
  color: #999;
}